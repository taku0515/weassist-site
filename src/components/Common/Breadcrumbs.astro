---
const { items } = Astro.props; // [{ label: "TOP", href: "/" }, { label: "会社概要", href: "" }] のような配列を受け取る
---

<nav aria-label="Breadcrumb" class="bg-slate-50 py-3 border-b border-slate-200">
  <div class="container mx-auto px-6">
    <ol class="flex items-center space-x-2 text-sm text-slate-500">
      {items.map((item: any, index: number) => (
        <li class="flex items-center">
          {index > 0 && <span class="mx-2 text-slate-300">/</span>}
          {item.href ? (
            <a href={item.href} class="hover:text-blue-600 transition-colors">
              {item.label}
            </a>
          ) : (
            <span class="font-bold text-slate-800" aria-current="page">
              {item.label}
            </span>
          )}
        </li>
      ))}
    </ol>
  </div>
</nav>